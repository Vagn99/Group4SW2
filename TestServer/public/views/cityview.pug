doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="/stylesheets/cityview.css")
    link(rel="stylesheet", href="/stylesheets/menu.css")
    link(rel="stylesheet", href="/stylesheets/selector.css")

    title Bravian
  body
    .box
    .main
      .container
        #cityview_tile
      
      .containerbtn
        #button_townhall 
        #button_resource
        #button_barrack 
        
      .container-h
          .container-h-box
            .grid-main
              .grid-container
                .header#name #{username} 
                .level#level Your level: 
                a(href="/cityview")
                  .nav1#nav1.hover
                    img(src="../images/assets/home.png" width="35px")
                a(href="/mapview")
                  .nav2#nav2.hover
                    img(src="../images/assets/village.png" width="35px")
                a(href="/login")  
                  .nav3#nav3.hover
                    img(src="../images/assets/chat.png" width="35px")
                a(href="/login/logout")
                  .nav4#nav4.hover
                    img(src="../images/assets/logout.png" width="35px")
                .info1#gold
                  .gold1#gold1
                    img(src="../images/assets/coin.png" width="25px")
                  .gold2#gold2 0
                .info2#common
                  .common1#common1
                    img(src="../images/assets/box.png" width="25px")
                  .common2#common2 0
                .info3#troops 
                  .troops1#troops1
                    img(src="../images/assets/intown.png" width="25px")
                  .troops2#troops2
                .info4#info4
                  .outtroops1#outtroops1
                    img(src="../images/assets/outtown.png" width="25px")
                  .outtroops2#outtroops2 0
              .selector
                .selector1
                  .h Barrack
                  .s1
                    .s11
                      img(src="../images/assets/dollar.png" width="25px" alt="Cost")
                      .s12#cost 0
                  .s2
                    .s21
                      img(src="../images/assets/que.png" width="25px" alt="Queue")
                      .s22#queue 0
                  .train 
                    button.button_train.hover#buttonTrain Train
                    .i#queueTime info
                .selector2
                  .h Townhall
                  .hdub#currentLevel
                  .t1
                    .t11 
                      img(src="../images/assets/dollar.png" width="25px" alt="Cost")
                    .t12#goldCost 0
                  .t2
                    .t21
                      img(src="../images/assets/box.png" width="25px")
                    .t22#commonCost 0
                  .upgrade
                    button.button_upgrade.hover#buttonUpgrade Upgrade
                  .i#upgradeButtonInfo Info
                .selector3
                  .h Resource
                  .r1#resourcePassiveIncome Passive income: 0
                  .r2#resourceOutsideIncome Outside income: 0
                  .i Info
              .time#timer

    script(src="./../javascripts/cityviewcontroller.js")
    script(src="./../javascripts/troops.js")
    script(src="./../javascripts/timer.js")  
  
